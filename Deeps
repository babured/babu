#!/bin/bash

# Define the Jenkins Home directory (you may need to adjust this path based on your installation)
JENKINS_HOME="/var/lib/jenkins"  # Default location on Linux

# List folder structure
echo "Jenkins Folder Structure:"

# List Workspace
echo "Workspace: $JENKINS_HOME/workspace"

# List Jobs
echo "Jobs: $JENKINS_HOME/jobs"

# List Plugins
echo "Plugins: $JENKINS_HOME/plugins"

# List Logs
echo "Logs: $JENKINS_HOME/logs"

# List Nodes
echo "Nodes: $JENKINS_HOME/nodes"

# List config.xml
echo "Config File: $JENKINS_HOME/config.xml"

# Optionally, list all subdirectories in the Jenkins Home folder
echo "Listing all subdirectories in Jenkins Home:"
ls -R $JENKINS_HOME
